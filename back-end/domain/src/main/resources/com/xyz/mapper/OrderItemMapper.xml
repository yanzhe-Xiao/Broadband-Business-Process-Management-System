<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xyz.mapper.OrderItemMapper">

    <resultMap id="BaseResultMap" type="com.xyz.orders.OrderItem">
            <id property="id" column="ID" />
            <result property="orderId" column="ORDER_ID" />
            <result property="planCode" column="PLAN_CODE" />
            <result property="qty" column="QTY" />
            <result property="createdAt" column="CREATED_AT" />
            <result property="updatedAt" column="UPDATED_AT" />
            <result property="status" column="STATUS" />
            <result property="username" column="USERNAME" />
            <result property="planType" column="PLAN_TYPE" />
            <result property="period" column="PERIOD" />
            <result property="statusExpireAt" column="STATUS_EXPIRE_AT" />
            <result property="endTime" column="END_TIME" />
            <result property="ip" column="IP" />
            <result property="deviceSn" column="DEVICE_SN" />
    </resultMap>

    <sql id="Base_Column_List">
        ID,ORDER_ID,PLAN_CODE,QTY,CREATED_AT,UPDATED_AT,
        STATUS,USERNAME,PLAN_TYPE,PERIOD,STATUS_EXPIRE_AT,END_TIME,IP,DEVICE_SN
    </sql>


    <select id="selectPageByUserGroupedOrder" resultType="com.xyz.orders.OrderItem">
        SELECT *
        FROM (
                 SELECT
                     oi.*,
                     /* 组内最大时间：若 UPDATED_AT 为空，用 CREATED_AT 兜底 */
                     MAX(COALESCE(oi.UPDATED_AT, oi.CREATED_AT)) OVER (PARTITION BY oi.PLAN_CODE) AS GRP_LATEST
                 FROM ORDER_ITEM oi
                 WHERE oi.USERNAME = #{username} AND oi.STATUS = '在购物车中'
             ) t
        /* 先按组时间倒序，使同 planCode 的记录相邻；再按记录自身时间/ID 细排 */
        ORDER BY t.GRP_LATEST DESC, t.UPDATED_AT DESC NULLS LAST, t.CREATED_AT DESC NULLS LAST, t.ID DESC
    </select>

    <select id="selectAllByUsername" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from ORDER_ITEM
        where
        USERNAME = #{username,jdbcType=VARCHAR}
    </select>
    <update id="updateOrderIdById">
        update ORDER_ITEM
        set ORDER_ID = #{orderId,jdbcType=NUMERIC}
        where ID = #{id,jdbcType=NUMERIC}
    </update>
    <update id="updateStatusById">
        update ORDER_ITEM
        set STATUS = #{status,jdbcType=VARCHAR}
        where ID = #{id,jdbcType=NUMERIC}
    </update>

    <update id="batchUpdateOrderIdById">
        UPDATE order_item
        SET order_id = #{orderId}
        WHERE id IN
        <foreach collection="orderItemIds" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>

    <update id="batchUpdateStatusAndExpireById">
        UPDATE ORDER_ITEM
        SET STATUS = #{status}
        WHERE ID IN
        <foreach collection="orderItemIds" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>
    <select id="selectStatusByIds" resultType="string">
        SELECT status FROM ORDER_ITEM WHERE id IN
        <foreach item="id" collection="orderItemIds" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>


</mapper>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xyz.mapper.RatingMapper">

    <resultMap id="BaseResultMap" type="com.xyz.orders.Rating">
            <id property="id" column="ID" />
            <result property="orderItemId" column="ORDER_ITEM_ID" />
            <result property="userId" column="USER_ID" />
            <result property="score" column="SCORE" />
            <result property="ratComment" column="RAT_COMMENT" />
            <result property="createdAt" column="CREATED_AT" />
    </resultMap>

    <sql id="Base_Column_List">
        ID,ORDER_ITEM_ID,USER_ID,SCORE,RAT_COMMENT,CREATED_AT
    </sql>

    <select id="selectAvgScoreByPlanCode" resultType="java.math.BigDecimal">
        SELECT ROUND(AVG(r.score), 1)
        FROM rating r
                 JOIN order_item oi ON oi.id = r.order_item_id
        WHERE oi.plan_code = #{planCode}
    </select>

</mapper>

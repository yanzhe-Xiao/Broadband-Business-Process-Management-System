<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xyz.mapper.RatingMapper">

    <resultMap id="BaseResultMap" type="com.xyz.orders.Rating">
            <id property="id" column="ID" />
            <result property="planCode" column="PLAN_CODE" />
            <result property="userId" column="USER_ID" />
            <result property="score" column="SCORE" />
            <result property="ratComment" column="RAT_COMMENT" />
            <result property="createdAt" column="CREATED_AT" />
            <result property="orderId" column="ORDER_ID" />
    </resultMap>

    <sql id="Base_Column_List">
        ID,PLAN_CODE,USER_ID,SCORE,RAT_COMMENT,CREATED_AT,
        ORDER_ID
    </sql>

    <select id="selectAvgScoreByPlanCode" resultType="java.math.BigDecimal">
        SELECT NVL(AVG(score), 0)
        FROM RATING
        WHERE plan_code = #{planCode}
    </select>
    <select id="selectAllByOrderId" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from RATING
        where
        ORDER_ID = #{orderId,jdbcType=NUMERIC}
    </select>
</mapper>

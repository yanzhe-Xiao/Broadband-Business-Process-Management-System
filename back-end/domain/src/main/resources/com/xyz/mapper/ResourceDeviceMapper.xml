<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xyz.mapper.ResourceDeviceMapper">

    <resultMap id="BaseResultMap" type="com.xyz.resources.ResourceDevice">
            <id property="id" column="ID" />
            <result property="sn" column="SN" />
            <result property="model" column="MODEL" />
            <result property="qty" column="QTY" />
            <result property="price" column="PRICE" />
            <result property="status" column="STATUS" />
            <result property="orderId" column="ORDER_ID" />
            <result property="createdAt" column="CREATED_AT" />
            <result property="updatedAt" column="UPDATED_AT" />
    </resultMap>

    <sql id="Base_Column_List">
        ID,SN,MODEL,QTY,PRICE,STATUS,
        ORDER_ID,CREATED_AT,UPDATED_AT
    </sql>
    <insert id="insertBatch">
        insert into RESOURCE_DEVICE(ID,SN,MODEL,
        QTY,PRICE,STATUS,
        ORDER_ID,CREATED_AT,UPDATED_AT)
        values
        <foreach collection="resourceDeviceCollection" item="item" separator=",">
            (#{item.id,jdbcType=NUMERIC},#{item.sn,jdbcType=VARCHAR},#{item.model,jdbcType=VARCHAR},
            #{item.qty,jdbcType=NUMERIC},#{item.price,jdbcType=NUMERIC},#{item.status,jdbcType=VARCHAR},
            #{item.orderId,jdbcType=NUMERIC},#{item.createdAt,jdbcType=TIMESTAMP},#{item.updatedAt,jdbcType=TIMESTAMP})
        </foreach>
    </insert>
    <select id="selectAllByStatus" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from RESOURCE_DEVICE
        where
        STATUS = #{status,jdbcType=VARCHAR}
    </select>
    <select id="selectByModel" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from RESOURCE_DEVICE
        where
        MODEL = #{model,jdbcType=VARCHAR}
    </select>
    <select id="selectByPriceLessThanEqual" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from RESOURCE_DEVICE
        where
        PRICE <![CDATA[  <= ]]> #{price,jdbcType=NUMERIC}
    </select>
    <update id="updateStatus">
        update RESOURCE_DEVICE
        set STATUS = #{status,jdbcType=VARCHAR}
    </update>
    <update id="updateModel">
        update RESOURCE_DEVICE
        set MODEL = #{model,jdbcType=VARCHAR}
    </update>
    <update id="updatePrice">
        update RESOURCE_DEVICE
        set PRICE = #{price,jdbcType=NUMERIC}
    </update>
    <update id="updateQty">
        update RESOURCE_DEVICE
        set QTY = #{qty,jdbcType=NUMERIC}
    </update>
    <update id="updateStatusBySn">
        update RESOURCE_DEVICE
        set STATUS = #{status,jdbcType=VARCHAR}
        where SN = #{sn,jdbcType=VARCHAR}
    </update>
    <update id="updateModelBySn">
        update RESOURCE_DEVICE
        set MODEL = #{model,jdbcType=VARCHAR}
        where SN = #{sn,jdbcType=VARCHAR}
    </update>
    <update id="updatePriceBySn">
        update RESOURCE_DEVICE
        set PRICE = #{price,jdbcType=NUMERIC}
        where SN = #{sn,jdbcType=VARCHAR}
    </update>
    <update id="updateQtyBySn">
        update RESOURCE_DEVICE
        set QTY = #{qty,jdbcType=NUMERIC}
        where SN = #{sn,jdbcType=VARCHAR}
    </update>
    <select id="selectBySn" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from RESOURCE_DEVICE
        where
        SN = #{sn,jdbcType=VARCHAR}
    </select>
</mapper>
